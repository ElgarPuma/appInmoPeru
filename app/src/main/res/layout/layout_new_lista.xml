<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout android:id="@+id/view_background2"
        android:background="@color/bgRowBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView  android:id="@+id/delete_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:textColor="@android:color/white"
            android:text="Eliminar"
            android:textSize="13sp"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_foreground2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">
        <ImageView
            android:id="@+id/thumbnail2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_note_add_black_36dp"
            android:scaleType="centerCrop"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitulo2"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/thumbnail2"
            android:textColor="@color/itemName"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescripcion2"
            android:layout_below="@+id/tvTitulo2"
            android:layout_toRightOf="@+id/thumbnail2"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/tvDescripcion2"
            android:layout_toRightOf="@+id/thumbnail2"
            android:id="@+id/tvFecha2"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>
</FrameLayout>
